extends base.pug

append head
	title='User Settings'

block header
	div(class='menu-bar-static')
		div.menu-element
			a(href='/')
				img(src='/public/thumb.png' class='menu-bar-thumb')
				p(class='menu-bar-text') Camagru
		div.float-right
			a(href='/logout') Log out
block content
	div.main-container.center.solo-container
		h2 Change Username
		if message
			p #{message}
		form(action='/settings/username' method='POST')
			input.primary-input.center(type='text' name='username' placeholder='Enter new user name...')
			input.primary-input.center.primary-input-button(type='submit' submit='Submit')